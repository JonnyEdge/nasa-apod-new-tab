{
  "name": "NASA New Tab",
  "version": "1.0",
  "description": "A new NASA image for every new tab.",

  "permissions": [
    "tabs"
  ],

  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "nasa.png",
    "default_title": "NASA New Tab"
  },

  "icons": {
    "16": "nasa.png",
    "32": "nasa.png",
    "48": "nasa.png",
    "128": "nasa.png"
  },

  "manifest_version": 2
}
